{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "javaType":"com.backbase.buildingblocks.test.data.PaymentCard",
  "properties": {
    "id": {
      "type": "string"
    },
    "pan": {
      "type": "string",
      "description": "Must be sixteen digits, optionally in blocks of 4 separated by a dash",
      "maxLength": 19
    },
    "cvc": {
      "type": "string",
      "description": "Card Verification Code",
      "minLength": 3,
      "maxLength": 3
    },
    "startDate": {
      "type": "string",
      "description": "Must be in one of these four formats: MM/YY MMYY MMYYYY MM/YYYY",
      "pattern": "^(0[1-9]|1[0-2])\/?([0-9]{4}|[0-9]{2})$"
    },
    "expiryDate": {
      "type": "string",
      "description": "Must be in one of these four formats: MM/YY MMYY MMYYYY MM/YYYY",
      "pattern": "^(0[1-9]|1[0-2])\/?([0-9]{4}|[0-9]{2})$"
    },
    "nameOnCard": {
      "type": "string"
    },
    "creationDate" : { 
      "type":"string", 
      "format":"date-time"
    },
    "balance" : {
      "type": "object",
      "$ref": "../../lib/types/schemas/currency.json"
    },
    "apr": {
      "type": "number",
      "javaType": "java.math.BigDecimal"
    },
    "cardtype" : {
      "type" : "string",
      "default" : "CREDIT",
      "enum" : ["CREDIT", "DEBIT", "PREPAID"]
    }
  },
  "required": [
    "id",
    "pan",
    "cvc",
    "startDate",
    "expiryDate",
    "nameOnCard"
  ]
}

<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.backbase.oss.boat.example</groupId>
        <artifactId>example</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>boat-multiple-executions</artifactId>
    <packaging>pom</packaging>

    <name>BOAT :: Execute multiple</name>

    <build>
        <plugins>
            <plugin>
                <groupId>com.backbase.oss</groupId>
                <artifactId>boat-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>generate-rest-template-embedded</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>doc</goal>
                        </goals>
                        <configuration>
                            <inputSpec>https://raw.githubusercontent.com/OAI/OpenAPI-Specification/master/examples/v3.0/api-with-examples.yaml</inputSpec>
                        </configuration>
                    </execution>
                    <execution>
                        <id>lint</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>lint</goal>
                        </goals>
                        <configuration>
                            <inputSpec>${project.basedir}/src/main/resources/presentation-client-api/openapi.yaml</inputSpec>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-docs</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>doc</goal>
                        </goals>
                        <configuration>
                            <inputSpec>${project.basedir}/src/main/resources/presentation-integration-api/openapi.yaml</inputSpec>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


</project>
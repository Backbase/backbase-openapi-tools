{{>licenseInfo}}
const data = {
  appName: "{{appName}}",
  appDescription: {{json appDescription}},
  operations: [],
  models: {},
  examples: {},
  requestBodies: {},
  responses: {},
  parameters: {},
  errors: {},
  {{~#if version}}
  version: "{{version}}",
  {{/if}}
    generatedDate: "{{generatedDate}}",
};
# OpenAPI Operations
{{#with apiInfo~}}
    {{~#each apis~}}
        {{~#with operations}}
data.operations.push({{json .}});
        {{~/with}}
    {{~/each}}
{{~/with}}
# OpenAPI Models
{{#each models}}
    {{~#with model}}
data.models["{{name}}"] = {{{json .}}};
    {{~/with}}
{{~/each}}
# OpenAPI Examples
{{#each examples as |example|}}
    {{~#with example}}
data.examples["{{name}}"] = {{json .}}
    {{~/with}}
{{~/each}}
# Request Bodies
{{#each requestBodies}}
data["requestBodies"]["{{baseName}}"] = {{{jsonSchema}}};
{{~/each}}
# Response Bodies
{{#each responses}}
data["responses"]["{{code}}"] = {{{jsonSchema}}};
{{~/each}}
# Parameters
{{#each parameters}}
data["parameters"]["{{paramName}}"] = {{{jsonSchema}}};
{{~/each}}
# Vendor Extensions
{{#each swagger.vendorExtensions.x-shared-errors}}
    let err = {{{json .}}};
    data["errors"][err.errorID] = err;
{{~/each}}

module.exports = { data };
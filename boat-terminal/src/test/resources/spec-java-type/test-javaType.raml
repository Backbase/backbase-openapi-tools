#%RAML 1.0
---
#===============================================================
# Example to verify that javaType can be used in exceptions which are re-used on different resources within single RAML.
#===============================================================
title: Example
version: v1
baseUri: "{version}/test"
mediaType:  application/json
protocols: [ HTTP, HTTPS ]
#===============================================================
#  API documentation - Overall documentation.
#===============================================================
documentation:
  - title: Example
    content: Test Schema to test all common types
traits:
  javaTypeError:
    responses:
      404:
        description: JavaTypeError
        body:
          application/json:
            type: !include schemas/java-type-error.json
#===============================================================
# API resource definitions
#===============================================================
/items:
  description: Retrieve all items.
  displayName: items
  uriParameters: null
  get:
    is: [javaTypeError]
    description: "Retrieve list of all items."
    responses:
      200:
        description: Test Array
        body:
          application/json:
            schema: !include schemas/test-get-array.json
            example: !include examples/example-get-array.json
          text/csv:
/item:
  description: Retrieve one item.
  displayName: item
  uriParameters: null
  get:
    is: [javaTypeError]
    description: "Retrieve one item."
    responses:
      200:
        description: Test One
        body:
          application/json:
            schema: !include schemas/test-get.json
            example: !include examples/example-get.json
          text/csv:
/others:  
  description: Retrieve other items.
  displayName: otheritems
  uriParameters: null
  get:
    is: [javaTypeError]
    description: "Retrieve list of all items."
    queryParameters:
      param1:
        displayName: parameter1
        type: number
        description: Example Parameter
        example: 5
        required: false
    responses:
      200:
        description: Test Schema
        body:
          application/json:
            schema: !include schemas/test-get.json
            example: !include examples/example-get.json
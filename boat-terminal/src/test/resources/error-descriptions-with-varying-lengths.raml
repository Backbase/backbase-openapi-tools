#%RAML 1.0
---
#===============================================================
# Example which tests query and uri parameter scala types
#===============================================================
title: Example
uses:
  traits: traits/traits.raml
version: v1
baseUri: "{version}/test"
mediaType:  application/json
protocols: [ HTTP, HTTPS ]
#===============================================================
#  API documentation - Overall documentation.
#===============================================================
documentation:
  - title: Example
    content: Test Schema to test error description fields

#===============================================================
# API resource definitions
#===============================================================
/items:
  description: Retrieve all items.
  displayName: items
  get:
    description: "Retrieve list of all items."
    responses:
      200:
        description: Test Schema
        body:
          application/json:
            schema: !include schemas/test-item.json
            example: !include examples/example-item.json
      400:
        description: ItemError
        body:
          application/json:
            type: !include types/schemas/error-item.json
            example: !include types/examples/example-bad-request-error.json
      401:
        description: ForbiddenError occurs when the user is unauthorized
        body:
          application/json:
            type: !include types/schemas/unauthorized-error.json
            example: !include types/examples/example-unauthorized-error.json
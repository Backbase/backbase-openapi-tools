title: AccessControl
version: v1
baseUri: "{version}"
mediaType:  application/json
protocols: [ HTTP, HTTPS ]
types:
  DataAccessGroup:
    type: !include schemas/dataaccessgroup-get.json
  BadRequest: !include schemas/bad-request.json
  InternalServerError: !include schemas/internal-server-error.json  
#===============================================================
#  API documentation - Overall documentation.
#===============================================================
documentation:
  - title: AccessControl
    content: !include docs/api.md
#===============================================================
# API resource definitions
#===============================================================
/accesscontrol/accessgroups/data:
  description: save and update data access groups in the backbase platform for given type, subtype and legal entity id.
  displayName: DataAccessGroups
  uriParameters: null
  post:
    description: "save data access groups of type {type} and subtype {subtype} for given legal entity."
    body:
       application/json:
         type: DataAccessGroup
         example: !include examples/dataaccessgroup-get-ex.json
    headers:
      X-test-required-true:
        description: Test Header where required=true
        required: true
        example: Hello World
      X-test-required-false:
        description: Test Header where required=false
        required: false
        example: Hello World
      X-test-required-none:
        description: Test Header where required is unspecified
        example: Hello World
      X-test-default-value:
        description: Test Header with default value
        default: Hello World
        example: Hello World
      X-test-boolean-type:
        description: Test Header with boolean type
        type: boolean
        example: true
    responses:
      200:
        description: "New Data Access Group created successfully."
      400:
        description: BadRequest
        body:
          type: BadRequest
      500:
        description: InternalServerError
        body:
          type: InternalServerError
  put:
    description: "Update a data access group"
    queryParameters:
    body:
      type: DataAccessGroup
      example: !include examples/dataaccessgroup-get-ex.json
    responses:
      200:
        description:  "Data Access group updated successfully."
      400:
        description: BadRequest
        body:
          type: BadRequest
      500:
        description: InternalServerError
        body:
          type: InternalServerError
  get:
    description: "Retrieve list of all items."
    responses:
      200:
        description: Test Schema
        body:
          application/json:
            type: DataAccessGroup
            example: !include examples/dataaccessgroup-get-ex.json         
#%RAML 1.0
---
#===============================================================
#  Messages - RAML example http://raml.org/
#  References:
#    - RAML Specification - https://github.com/raml-org/raml-spec/blob/master/raml-0.8.md
#===============================================================
title: Message Center
version: v1
baseUri: "{version}/"
mediaType:  application/json
protocols: [ HTTP, HTTPS ]
#===============================================================
# API resource definitions
#===============================================================
/users:
  displayName: Messages
  /{userId}:
    uriParameters:
      userId:
        type: string
    /conversations:
      displayName: Conversations
      /{conversationId}:
        displayName: Conversation
        uriParameters:
          conversationId:
            type: string
        /drafts:
          displayName: ConversationDrafts
          get:
            description: Returns drafts that have been created in the conversation by given user
            queryParameters:
              limit:
                type: integer
                description: maximum amount of drafts to provide
            responses:
              200:
                body:
                  application/json:
                    schema: {
                            "type": "object",
                            "properties": {
                              "userId": {
                                "type": "string",
                                "required": true
                              }
                            }
                          }
